{
  "expo": {
    "name": "SmartCalorie AI",
    "slug": "smartcalorie-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "smartcalorie",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ecfdf5"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.smartcalorie.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Yemek fotoğrafı çekmek için kameraya erişim gereklidir.",
        "NSPhotoLibraryUsageDescription": "Galeriden yemek fotoğrafı seçmek için erişim gereklidir.",
        "CFBundleAllowMixedLocalizations": true
      }
    },
    "android": {
      "package": "com.smartcalorie.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ecfdf5"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.INTERNET"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Yemek fotoğrafı çekmek için kameraya erişim gereklidir."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Galeriden yemek fotoğrafı seçmek için erişim gereklidir."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "smartcalorie-ai"
      }
    },
    "owner": "nevzaterdem"
  }
}